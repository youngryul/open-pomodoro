{
  "manifest_version": 3,
  "name": "Weather Pomodoro",
  "description" : "Pomodoro that changes according to the weather",
  "version": "1.0.2",
  "action": {
    "default_icon": "assets/pomodoro_img.png"
  },
  "icons": {
    "16" : "assets/pomodoro_img.png",
    "24" : "assets/pomodoro_img.png",
    "32" : "assets/pomodoro_img.png",
    "64" : "assets/pomodoro_img.png",
    "128" : "assets/pomodoro_img.png"
  },
  "permissions": ["geolocation", "tabs"],
  "background" : {
    "service_worker" : "background.js"
  }
}
