{
  "manifest_version": 3,
  "name": "Weather Pomodoro",
  "description" : "The Pomodoro is a method to enhance work concentration by focusing for a set period of time followed by a short break.",
  "version": "1.2.1",
  "action": {
    "default_icon": "assets/pomodoro_img.png"
  },
  "icons": {
    "16" : "assets/pomodoro_img.png",
    "24" : "assets/pomodoro_img.png",
    "32" : "assets/pomodoro_img.png",
    "64" : "assets/pomodoro_img.png",
    "128" : "assets/pomodoro_img.png"
  },
  "permissions": ["geolocation"],
  "background" : {
    "service_worker" : "background.js"
  }
}
